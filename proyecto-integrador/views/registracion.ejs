<body>
    <%-include("partials/header") %> 

    <main>
        <div class="uk-section uk-section-small">
            <div class="uk-container uk-container-large uk-flex uk-flex-middle uk-flex-center">


              <!-- EMPIEZA FORM -->

            <form action="/user/registracion" method="post">

                <h2>Complete su formulario de registración</h2>

                <label for="">Nombre</label> <br>
                <input type="text" name="nombre" id="" placeholder="Nombre"><br>

                <label for="">Apellido</label> <br>
                <input type="text" name="apellido" id="" placeholder="Apellido"><br>

                <label for="">Nombre de usuario</label> <br>
                <input type="text" name="username" id="" placeholder="Nombre de usuario"><br>

                <label for="">Mail</label><br>
                <input type="mail" name="mail" id="" placeholder="Mail" required="@"><br>

                <label for="">Contraseña</label><br>
                <input type="password" name="password" id="" placeholder="Password" required="password"><br>

                <label for="">Fecha de Nacimiento</label><br>
                <input type="date" name="fecha" id="" placeholder="Fecha de nacimiento"><br>


                <label for="">Pregunta de seguridad</label> <br>

                <select name="pregunta" id="" ><br>
                <option value="1">Cual es el nombre de tu perro?</option>
                <option value="2">En que ciudad se conocieron tus padres? </option>
                <option value="3">Como se llama el colegio de tu infancia?</option> </select> <br>


                <label for="">Respuesta</label><br>
                <input type="text" name="respuesta"><br>

                <input type="submit" value="Submit">
                    
                            
            </form>
                                <!-- TERMINA FORM -->
                
            </div>
        </div>
